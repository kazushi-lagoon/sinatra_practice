<body>
  <div class="show_memos">
    <h1 >メモアプリ</h1>
    <p class="file_name">メモ<%= @number%></p>
    <p class="file_content"><%= @file_content%></p>
  </div>
  <div class="container container2">
    <div class="row">
      <div class="col-sm-1 patch-btn">
        <a href = <%= "/edition/#{@number}"%> class="btn btn-warning">変更</a>
      </div>
      <div class="col-sm-1 delete-btn">
        <form action=<%= "/memo/#{@number}"%> method="post">
          <input type="hidden" name="_method" value="delete"/>
          <input type="submit" value="削除" class="btn btn-danger">
        </form>
      </div>
    </div>
  </div>
</body>
